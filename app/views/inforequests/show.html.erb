<h3>Info Requests</h3>
<% @requests.each do |request| %>
  <%= render partial: '/users/preview', locals: {user: request.asker} %>
  Asked Info:
  <% request.info.split(' ').each do |field| %>
    <%=@info[field.to_i].to_s.humanize%>
    <%= ',' unless field == request.info.split.last %>
  <% end %>
  <br><br>
  <div class="row">
    <div class="col-xs-1 text-right">
      <%= button_to "Allow", inforequests_reply_path, params: {reply: 'allow', id: request.id}, :class => 'btn btn-success'%>
    </div>
    <div class="col-xs-1 text-left">
      <%= button_to "Deny", inforequests_reply_path, params: {reply: 'deny', id: request.id}, :class => 'btn btn-danger'%>
    </div>
  </div>
  <hr/><br>
<% end %>
<%= link_to 'Back', root_path %>
