<div class="text-center">
  <h1>Home</h1>
  <br>
    <%= form_tag({action: 'search', :controller=>"users"}, {method: 'get', class: "form-inline"} ) do |f| %>
      <div class="field form-group">
        <%= text_field :query, '', class: "form-control col-xs-1" %>
        <%= submit_tag 'Search', :class => "btn btn-default"%>
      </div>
    <% end %>
  <br>
  <%= button_to "Xchange!", user_tokens_path(current_user), method: :post , :class => 'btn btn-info'%>
  <br>
  Logged in as <strong><%= current_user.email %></strong>.<br>
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> |
  <%= link_to "my Profile", users_myprofile_path  %>
</div>
