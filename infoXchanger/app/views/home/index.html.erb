<div class="text-center">
  <h1>Home</h1>
  <br>
    <%= form_tag({action: 'search', :controller=>"users"}, {method: 'get', class: "form-inline"} ) do |f| %>
      <div class="field form-group">
        <%= text_field :query, '', class: "form-control col-xs-1" %>
        <%= submit_tag 'Search', :class => "btn btn-default"%>
      </div>
    <% end %>
  <br>
  <div class="row">
    <div class="col-xs-6 text-right">
      <%= button_to "Create Token", users_select_path, method: :get , :class => 'btn btn-lg btn-success'%>
    </div>
    <div class="col-xs-6 text-left">
      <%= button_to "Scan Token", scan_path, method: :get , :class => 'btn btn-lg btn-warning'%>
    </div>
  </div>
  <br>
  <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %></strong>.<br>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> |
    <%= link_to "my Profile", users_myprofile_path  %>
  <% end %>
</div>
